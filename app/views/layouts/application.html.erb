<!DOCTYPE html>
<html>
  <head>
    <title>MediaRankerRevisitedVs</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Gudea:400,700|Hammersmith+One' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'favicon.ico' %>
  </head>

<body>
  <header class="app-header__header">
    <h1>
      <%= link_to "Media Ranker", root_path %>
      <small>Ranking the Best of Everything</small>
    </h1>

    <nav class="app-header__nav">
      <ul class="nav app-header__site-nav-container">
        <li class="nav-item app-header__nav_item">
          <%= link_to "View top media", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item app-header__nav_item">
          <%= link_to "View all media", works_path, class: "nav-link" %>
        </li>
        <li class="nav-item app-header__nav_item">
          <%= link_to "Add a new work", new_work_path, class: "nav-link" %>
        </li>
        <li class="nav-item app-header__nav_item">
          <%= link_to "View all users", users_path, class: "nav-link" %>
        </li>
      </ul>
      <ul class="nav app-header__user-nav-container">
        <% if @login_user %>

        <li class="nav-item app-header__nav_item">
          <%= link_to "Logged in as #{@login_user.username}", user_path(@login_user), class: "btn btn-primary" %>
        </li>

        <li class="nav-item app-header__nav_item">
          <%= link_to "Log Out", logout_path, method: :delete, class: "btn btn-primary" %>
        </li>

        <% else %>

        <li class="nav-item app-header__nav_item">
           <%= link_to "Login with GitHub", github_login_path, class: "btn btn-primary"%>
        </li>

        <% end %>


      </ul>
    </nav>
  </header>

  <% if flash[:error] %>
  <div class="alert alert-warning alert-container">
    <%= flash[:error] %>
    <% if flash[:reason] %>
      <ul>
        <li><%= flash[:reason] %></li>
      </ul>
    <% end %>

    <% if @user %>
      <% if @user.errors.any? %>
        <ul>
          <% @user.errors.each do |column, message| %>
            <li> <%= column %>: <%= message %> </li>
          <% end %>
        </ul>
      <% end %>
    <% end %>

    <% if @work %>
      <% if @work.errors.any? %>
        <ul>
          <% @work.errors.each do |column, message| %>
            <li> <%= column %>: <%= message %> </li>
          <% end %>
        </ul>
      <% end %>
    <% end %>

  </div>
<% elsif flash[:success] %>
  <div class="alert alert-success alert-container">
    <%= flash[:success] %>
  </div>
<% end %>
  <main>
    <%= yield %>
  </main>
</body>
</html>
